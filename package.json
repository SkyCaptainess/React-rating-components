{
  "author": "Simone Mastromattei <smastrom@proton.me>",
  "browser": "dist/index.umd.min.js",
  "devDependencies": {
    "@playwright/test": "^1.22.2",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.41",
    "@types/prettier": "^2.6.3",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@vitejs/plugin-react": "^1.3.2",
    "cssom": "^0.5.0",
    "eslint": "^8.2.0",
    "eslint-plugin-react": "^7.28.0",
    "jest": "^28.1.1",
    "prettier": "^2.6.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^28.0.4",
    "tslib": "^2.4.0",
    "typescript": "^4.7.3",
    "vite": "^2.9.10",
    "vite-plugin-dts": "^1.2.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.min.js"
    }
  },
  "files": [
    "dist"
  ],
  "homepage": "smastromattei.dev",
  "jest": {
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "preset": "ts-jest/presets/default-esm",
    "testPathIgnorePatterns": [
      "./e2e"
    ]
  },
  "license": "MIT",
  "main": "dist/index.umd.min.js",
  "module": "dist/index.js",
  "name": "react-advanced-rating",
  "peerDependencies": {
    "react": "^16.8.0 || ^17 || ^18",
    "react-dom": "^16.8.0 || ^17 || ^18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smastrom/react-advanced-rating"
  },
  "scripts": {
    "build": "yarn clean && tsc && vite build",
    "clean": "rimraf dist",
    "dev": "vite",
    "examples:gatsby": "yarn build && cd dist && cp index.css index.js index.d.ts ../examples/gatsby/react-advanced-rating/",
    "examples:next": "yarn build && cd dist && cp index.css index.js index.d.ts ../examples/next/react-advanced-rating/",
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx",
    "test:e2e": "yarn playwright test && yarn playwright show-report",
    "test:unit": "yarn jest"
  },
  "style": "dist/index.css",
  "types": "dist/index.d.ts",
  "version": "0.1.0"
}
