{
  "name": "react-advanced-rating",
  "version": "0.1.0",
  "homepage": "https://react-advanced-rating.onrender.com/",
  "bugs": {
    "url": "https://github.com/smastrom/react-advanced-rating/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smastrom/react-advanced-rating"
  },
  "license": "MIT",
  "author": "Simone Mastromattei <smastrom@proton.me>",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.min.js"
    },
    "./dist/index.min.css": {
      "import": "./dist/index.min.css",
      "require": "./dist/index.min.css"
    }
  },
  "keywords": [
    "react",
    "react-rating",
    "react-reviews",
    "react-component",
    "rating",
    "rating-star",
    "rating-component",
    "star-component",
    "stars",
    "reviews",
    "reviews-component"
  ],
  "main": "dist/index.umd.min.js",
  "module": "dist/index.js",
  "browser": "dist/index.umd.min.js",
  "types": "dist/index.d.ts",
  "style": "dist/index.min.css",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc && vite build",
    "dev": "vite",
    "examples:gatsby": "yarn build && cd dist && cp index.css index.js index.d.ts ../examples/gatsby/react-advanced-rating/",
    "examples:next": "yarn build && cd dist && cp index.css index.js index.d.ts ../examples/next/react-advanced-rating/",
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "yarn test:unit && yarn test:dom && yarn test:e2e",
    "test:dom": "yarn jest --testPathPattern=tests/dom-output",
    "test:e2e": "yarn playwright test && yarn playwright show-report",
    "test:unit": "yarn jest --testPathPattern=tests/unit"
  },
  "devDependencies": {
    "@playwright/test": "^1.22.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.41",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@vitejs/plugin-react": "^1.3.2",
    "eslint": "^8.2.0",
    "eslint-plugin-react": "^7.28.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "jsdom": "^19.0.0",
    "prettier": "^2.6.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.3",
    "vite": "^2.9.10",
    "vite-plugin-dts": "^1.2.0",
    "@testing-library/user-event": "^14.2.1"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17 || ^18",
    "react-dom": "^16.8.0 || ^17 || ^18"
  }
}
