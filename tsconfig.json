{
   "compilerOptions": {
      "target": "ES2015",
      "lib": ["DOM", "DOM.Iterable", "ES2015"],
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "types": ["node", "vitest/globals"]
   },
   "include": ["src", "vite", "tests"]
}
